{
	"name": "lsp-embedded-language-service-sample",
	"description": "A language server example using language services to support embedded languages",
	"author": "Microsoft Corporation",
	"license": "MIT",
	"version": "1.0.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/Microsoft/vscode-extension-samples"
	},
	"publisher": "vscode-samples",
	"categories": [ ],
	"keywords": [ ],
	"engines": {
		"vscode": "^1.74.0"
	},
	"activationEvents": [
		"onLanguage:riot"
	],
	"main": "./client/out/extension",
	"contributes": {
		"languages": [
			{
				"id": "riot",
				"aliases": [
					"Riot",
					"RiotJS",
					"riot"
				],
				"extensions": [
					".riot"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "riot",
				"scopeName": "source.riot",
				"path": "./syntaxes/riot.tmLanguage.json"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "cd client && npm install && cd .. && npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"lint": "eslint",
		"postinstall": "cd client && npm install && cd ../server && npm install && cd .."
	},
	"devDependencies": {
		"@eslint/js": "^9.13.0",
		"@stylistic/eslint-plugin": "^2.9.0",
		"@types/mocha": "^5.2.7",
		"@types/node": "^20",
		"eslint": "^9.13.0",
		"typescript": "^5.6.3",
		"typescript-eslint": "^8.11.0",
		"typescript-language-server": "^4.3.3"
	},
	"dependencies": {
		"cheerio": "^1.0.0"
	}
}
